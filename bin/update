#!/bin/bash

pathToHere=$(cd "$(dirname "$0")"; pwd)


# DEPRECATED : see https://github.com/bronson/vim-update-bundles --> 'runtime path'
## update the pathogen script
#echo -e "Updating vim-pathogen"
#curl -s https://raw.github.com/tpope/vim-pathogen/master/autoload/pathogen.vim > $pathToHere/../autoload/pathogen.vim
#echo -e "Done"

# update the vim-update-bundles script
echo -e "Updating vim-update-bundles"
curl -s https://raw.github.com/bronson/vim-update-bundles/master/vim-update-bundles > $pathToHere/vim-update-bundles
echo -e "Done"

# update bundles
ruby $pathToHere/vim-update-bundles

